{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Debug",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "Flutter Web Server (Network)",
            "request": "launch",
            "type": "dart",
            "deviceId": "web-server",
            "args": [
                "--web-hostname=0.0.0.0",
                "--web-port=60275"
            ]
        },
        {
            "name": "Mail Page - Profile Mode",
            "request": "launch",
            "type": "dart",
            "program": "lib/src/features/mail/presentation/pages/mail_page.dart",
            "flutterMode": "profile"
        },
        {
            "name": "Mail Page - Debug Mode",
            "request": "launch",
            "type": "dart", 
            "program": "lib/src/features/mail/presentation/pages/mail_page.dart",
            "flutterMode": "debug"
        }
    ]
}